{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    // Окружение
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.iterable",
      "ES2022"
    ],
    "jsx": "preserve",
    // Модули
    "module": "esnext",
    "moduleResolution": "bundler",
    // Генерация файлов
    "noEmit": true,
    "tsBuildInfoFile": "./.next/cache/.tsbuildinfo",
    // Next.js plugins
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Структура проекта
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
