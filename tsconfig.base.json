{
  "compilerOptions": {
    // Строгость типов
    "strict": true,
    "useUnknownInCatchVariables": true,
    // Дополнительные проверки кода
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    // Совместимость и интероперабельность 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, //* Проверка регистра в именах файлов (важно для Linux)
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    // Генерация файлов
    "sourceMap": true,
    "removeComments": false,
    // Производительность
    "skipLibCheck": true,
    "incremental": true
  }
}
